<div class="container">
  <%= if logged_in?(@conn) do %>
    <span>
      <%= link "Holidays", to: holiday_path(@conn, :index)%>
    </span>
    <%= if admin?(@conn) do %>
      |
      <span>
        <%= link "Users", to: user_path(@conn, :index)%>
      </span>
    <% end %>
    |
    <span>
      <%= link "Logout", to: auth_path(@conn, :logout), method: :delete %>
    </span>
  <% else %>
    <span>
      <%= link "Login", to: auth_path(@conn, :new)%>
    </span>
  <% end %>
</div>
